             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShatRangyy"
             xmlns:CustomControls="clr-namespace:ShatRangyy.CustomControls"
             mc:Ignorable="d"
             Height="660"
             Width="1043" 
             Loaded="UserControl_Loaded"
             PreviewKeyDown="UserControl_PreviewKeyDown">
    <Border x:Name="MainBorder"
            CornerRadius="20" 
            Background="{DynamicResource BakgrounColor}">
        <Grid>
            <!--#region Grid Rows & Clumns-->
            <Grid.RowDefinitions>
                <RowDefinition Height="235"/>
                <RowDefinition Height="105"/>
                <RowDefinition Height="105"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="104"/>
                <ColumnDefinition Width="104"/>
                <ColumnDefinition Width="104"/>
                <ColumnDefinition Width="104"/>
                <ColumnDefinition Width="104"/>
            </Grid.ColumnDefinitions>
            <!--#endregion-->

            <Border Grid.Row="0" 
                    Background="{DynamicResource BorderBakgroundColor}"
                    Margin="10"
                    CornerRadius="20"
                    Name="BorderTop"
                    Grid.ColumnSpan="10">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1"
                                      BlurRadius="20"
                                      Opacity="0.5"/>
                </Border.Effect>
                <Grid>
                    <!--#region Grid Rows & Clumns-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="75"/>
                        <ColumnDefinition Width="75"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>
                    <!--#endregion-->

                    <!--#region Buttons-->
                    <Button x:Name="btnExit" 
                            Grid.Column="13" 
                            Grid.RowSpan="2"
                            Margin="11,15,29,20"
                            Width="NaN"
                            Height="NaN"
                            Click="btnExit_Click" 
                            IsTabStop="False"
                            Style="{StaticResource btnCricle}"
                            ToolTip="ESC" TabIndex="17">
                        <Image Source="/Images/001-close.png" 
                               Width="17" Height="17"
                               Stretch="Fill"/>
                    </Button>
                    <Button x:Name="btnDelete"
                            Grid.Column="12" 
                            Margin="33,28,0,0"
                            Grid.Row="1" 
                            Grid.RowSpan="3"
                            Panel.ZIndex="8"
                            Style="{StaticResource btnDocument}"
                            ToolTip="F3"
                            Grid.ColumnSpan="2"
                            Width="55"
                            Height="80"
                            Click="btnDelete_Click" TabIndex="16">
                        <DockPanel>
                            <Image DockPanel.Dock="Top"
                                   Source="/Images/document remove w2.png" 
                                   Height="40" Width="40" 
                                   Margin="2"/>
                            <Label FontSize="13" 
                                   FontFamily="/ShatRangyy;component/Fonts/#IRANSansXFaNum" 
                                   HorizontalContentAlignment="Center">حذف</Label>
                        </DockPanel>
                    </Button>
                    <Button x:Name="btnEdite" 
                            Grid.Column="11" 
                            Grid.Row="1"
                            Grid.RowSpan="3"
                            Panel.ZIndex="9"
                            Style="{StaticResource btnDocument}"
                            ToolTip="F2"
                            Grid.ColumnSpan="2"
                            Margin="46,28,0,0"
                            Width="54"
                            Height="80"
                            Click="btnEdite_Click" TabIndex="15">
                        <DockPanel>
                            <Image DockPanel.Dock="Top" 
                                   Source="/Images/document edit w2.png" 
                                   Height="40" Width="40" 
                                   Margin="2"/>
                            <Label FontSize="13" 
                                   FontFamily="/ShatRangyy;component/Fonts/#IRANSansXFaNum"
                                   HorizontalContentAlignment="Center">ویرایش</Label>
                        </DockPanel>

                    </Button>
                    <Button x:Name="btnSave" 
                            Grid.Column="10" 
                            Margin="57,28,0,0" 
                            Grid.Row="1" 
                            Grid.RowSpan="3"
                            Click="btnSave_Click"
                            Panel.ZIndex="7"
                            Grid.ColumnSpan="2"
                            Style="{StaticResource btnDocument}"
                            ToolTip="F1" TabIndex="14">
                        <DockPanel>
                            <Image DockPanel.Dock="Top" 
                                   Source="/Images/document save w2.png" 
                                   Height="40" Width="40"
                                   Margin="2"/>
                            <Label FontSize="13" 
                                   FontFamily="/ShatRangyy;component/Fonts/#IRANSansXFaNum" 
                                   HorizontalContentAlignment="Center">ذخیره</Label>
                        </DockPanel>
                    </Button>
                    <!--#endregion-->

                    <!--#region TextBoxs-->
                    <Border x:Name="SellerName_Border"
                        Grid.ColumnSpan="4" 
                        Grid.Column="10"
                        Margin="65,14,37,11"
                        Height="45"
                        Style="{StaticResource TextBoxBackground}" 
                        Grid.RowSpan="2"
                        Grid.Row="4">
                        <TextBox x:Name="txtSellerName"
                             HorizontalAlignment="Left" 
                             Height="35"
                             Margin="15,-1,0,0" 
                             Grid.Row="4" 
                             VerticalAlignment="Top"
                             Width="170" 
                             
                             Foreground="White" 
                             BorderBrush="WhiteSmoke" 
                             TextAlignment="Right" 
                             Grid.RowSpan="2" 
                             FontFamily="/ShatRangyy;component/Fonts/#IRANSansXFaNum"
                             SelectionBrush="{DynamicResource MainColor}"
                             CaretBrush="{DynamicResource MainColor}"
                             FontSize="15" 
                             MaxLength="50" 
                             TextChanged="txtSellerName_TextChanged"
                             KeyDown="txtSellerName_KeyDown" 
                             Panel.ZIndex="6"
                             ClipToBounds="True"
                             HorizontalContentAlignment="Right"
                             materialDesign:HintAssist.Hint="فروشنده"
                             TabIndex="6"
                             LostFocus="txtSellerName_LostFocus"
                             ToolTip="F6"/>
                    </Border>
                    <Border x:Name="ItemName_Border"
                        Grid.ColumnSpan="3"
                        Grid.Column="8" 
                        Grid.Row="4"
                        Grid.RowSpan="2"
                        Height="45"
                        Margin="15,14,19,11"
                        Style="{StaticResource TextBoxBackground}">
                        <TextBox x:Name="txtItemName" 
                             HorizontalAlignment="Center" 
                             Height="35" 
                             VerticalAlignment="Top" 
                             Width="172" 
                             Foreground="WhiteSmoke" 
                             BorderBrush="WhiteSmoke" 
                             TextAlignment="Right"
                             FontFamily="/ShatRangyy;component/Fonts/#IRANSansXFaNum" 
                             CaretBrush="{DynamicResource MainColor}" 
                             SelectionBrush="{StaticResource MainColor}"
                             FontSize="15" 
                             MaxLength="80"
                             KeyDown="txtItemName_KeyDown"
                             Panel.ZIndex="5"
                             ClipToBounds="True"
                             Margin="0,-1,0,0"
                             HorizontalContentAlignment="Right"
                             materialDesign:HintAssist.Hint="کالا"
                             TabIndex="5"/>
                    </Border>
                    <Border x:Name="Number_Border"
