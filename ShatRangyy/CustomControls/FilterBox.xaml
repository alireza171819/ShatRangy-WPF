                        VerticalAlignment="Center"
                        Width="172" Grid.Row="2" Height="27" Margin="12,0,0,0" FontFamily="/ShatRangyy;component/Fonts/#IRANSansXFaNum" FontSize="14"/>

                </Grid>
            </Border>
            <Border Background="{StaticResource BorderBakgroundColor}"
                Margin="10,10,10,10"
                CornerRadius="20"
                Grid.Column="1"
                Grid.Row="1">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1"
                        Opacity="0.5"
                        BlurRadius="5"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="191*"/>
                        <ColumnDefinition Width="32*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="CheckBox4"
                        Margin="1,17,13,16"
