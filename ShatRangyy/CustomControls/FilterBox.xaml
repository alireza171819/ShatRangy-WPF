                        Style="{DynamicResource CheckBox_Custom}"
                        Foreground="WhiteSmoke"
                        IsChecked="False" Grid.Row="1" Grid.Column="1" Width="18" Height="18" Checked="CheckBox5_Checked"/>
                    <Label x:Name="lbN4" Content="جستوجو براساس تاریخ"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Right"
                        VerticalAlignment="Top"
                        Width="172" Height="27" Margin="13,12,0,0" FontFamily="/ShatRangyy;component/Fonts/#IRANSansXFaNum" FontSize="14"/>
                    <Label x:Name="lbN5" Content="جستوجو براساس تاریخ"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Right"
                        VerticalAlignment="Center"
                        Width="172" Grid.Row="1" Height="27" Margin="13,0,0,0" FontFamily="/ShatRangyy;component/Fonts/#IRANSansXFaNum" FontSize="14"/>
                    <Label x:Name="lbN6" Content="جستوجو براساس تاریخ"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Right"
                        VerticalAlignment="Center"
                        Width="172" Grid.Row="2" Height="27" Margin="13,0,0,0" FontFamily="/ShatRangyy;component/Fonts/#IRANSansXFaNum" FontSize="14"/>
                    <CheckBox x:Name="CheckBox6"
                        Margin="1,17,13,16"
                        FontFamily="/ShatRangyy;component/Fonts/#IRANSansXFaNum"
                        Style="{DynamicResource CheckBox_Custom}"
                        Foreground="WhiteSmoke"
                        IsChecked="False" Grid.Row="2" Grid.Column="1" Width="18" Height="18" Checked="CheckBox6_Checked"/>

                </Grid>
            </Border>
            <Border Background="{StaticResource BorderBakgroundColor}"
                Margin="10,10,10,10"
                CornerRadius="20"
                Grid.Row="1">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1"
                        Opacity="0.5"
