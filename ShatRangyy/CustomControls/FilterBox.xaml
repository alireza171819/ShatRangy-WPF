                    <CheckBox x:Name="CheckBox9"
                        Margin="2,17,12,16"
                        FontFamily="/ShatRangyy;component/Fonts/#IRANSansXFaNum"
                        Style="{DynamicResource CheckBox_Custom}"
                        Foreground="WhiteSmoke"
                        IsChecked="False"
                        Grid.Column="1" Grid.Row="2" Width="18" Height="18" Checked="CheckBox9_Checked"/>
