                        Margin="13,12,0,0"
                        VerticalAlignment="Top"
                        Width="172" Height="27" FontFamily="/ShatRangyy;component/Fonts/#IRANSansXFaNum" FontSize="14"/>
                    <Label x:Name="lbN8" Content="جستوجو براساس تاریخ"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Right"
                        VerticalAlignment="Center"
                        Width="172"
                        Grid.Row="1"
                        Height="27"
                        Margin="13,0,0,0"
                        FontFamily="/ShatRangyy;component/Fonts/#IRANSansXFaNum" FontSize="14"/>
                    <Label x:Name="lbN9" Content="جستوجو براساس تاریخ"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Right"
                        VerticalAlignment="Center"
                        Width="172" Grid.Row="2" Height="27" Margin="13,0,0,0" FontFamily="/ShatRangyy;component/Fonts/#IRANSansXFaNum" FontSize="14"/>

                </Grid>
            </Border>
            <Button x:Name="btnCancel"
                Style="{StaticResource btnSecendery}"
                Margin="207,15,0,11"
                Grid.Row="2" 
                Width="150"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Left"
                Content="لغو"
                Click="btnCancel_Click"/>
            <Button x:Name="btnOk"
                Style="{StaticResource btnPrimery}"
                RenderTransformOrigin="0.52,0.686"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Grid.Row="2"
                Content="جستوجو"
                Width="150"
                Margin="139,14,0,12"
                HorizontalAlignment="Left"
                Click="btnOk_Click"/>
        </Grid>
    </Border>
</Window>
